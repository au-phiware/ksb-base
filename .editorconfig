# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{sh,bash}]
indent_size = 2

[*.{js}]
indent_size = 2

[*.{json}]
indent_size = 4

[*.{pug}]
indent_size = 2

[*.{py,ruby}]
indent_size = 4

[Vagrantfile]
charset = utf-8
indent_size = 2
